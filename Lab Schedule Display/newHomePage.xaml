<Page
    x:Class="Lab_Schedule_Display.newHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab_Schedule_Display"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Light"
    Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <StackPanel Margin="0,60,36,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                <TextBlock Text="08:50 AM" TextAlignment="Right" FontWeight="Bold" Style="{ThemeResource SubheaderTextBlockStyle}"/>
                <TextBlock Text="Monday" TextAlignment="Right" Style="{ThemeResource TitleTextBlockStyle}" />
                <TextBlock Text="19 November 2018" TextAlignment="Right" Style="{ThemeResource TitleTextBlockStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
